@model List<Works>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Work List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table id="tblData" class="table table-boarded table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Work ID
                    </th>
                    <th>
                        Work Name
                    </th>
                    <th>
                        Assignee
                    </th>
                    <th>
                        Work Creation Date
                    </th>
                    <th>
                        Work End Date
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/Works.js"></script>
}