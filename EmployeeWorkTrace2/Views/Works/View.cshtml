@model Works



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-bg-danger-primary">View Work</h2>
            <hr />
        </div>
        <div classs="mb-3 row p-1">
            <label asp-for="WorkName" class="p-0">Work Name</label>
            <input asp-for="WorkName" class="form-control" />
            <span asp-validation-for="WorkName" class="text-danger"></span>
        </div>
        <div classs="mb-3 row p-1">
            <label asp-for="Assignee" class="p-0">Assignee</label>
            <input asp-for="Assignee" class="form-control" />
            <span asp-validation-for="Assignee" class="text-danger"></span>
        </div>
        <div classs="mb-3 row p-1">
            <label asp-for="WorkEndDate" class="p-0">Planned End Date</label>
            <input asp-for="WorkEndDate" class="form-control" />
            <span asp-validation-for="WorkEndDate" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 p-2">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 p-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To Home</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}